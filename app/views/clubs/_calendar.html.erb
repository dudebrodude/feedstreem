<div>
<table class="table table-hover ">
	<tbody>
		<% @upcoming_events.each do |event| %>

		<tr>
			<td class="event-date"> <p class="event"> <%= event.start_time.strftime(' %-m/%d') %></p></td>
			<td class="event-date"><%= event.start_time.strftime('%A') %></td>
			<td class="event-date"></td>
			<td class="event-date"> <%= link_to '+', root_path, class:"btn btn-primary btn-xs btn-add-right" %></td>
		</tr>
		<tr>
			<td class="panel-custom"><%= image_tag event.picture %></td>
			<td class="panel-custom"><p class="event"><%= event.name %></p>
				<p class="event-time"><%= event.start_time.strftime('%l:%M%P') %></p>
			</td>
			<td class="panel-custom"></td>
			<td class="panel-custom"></td>
		</tr>



		<% end %>
	</tbody>
</table> 
</div>