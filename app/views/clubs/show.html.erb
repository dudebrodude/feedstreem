<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="col-sm-3 panel">
	<section>
		<p class="section-title">Club Info</p>
		<p class="club-info-wait pull-right">Estimated Wait: <%= @club.wait %> min</p>
		<p class="club-name"><%= @club.name %></p>
		<p class="club-info"><%= fa_icon 'phone' %> <%= number_to_phone(@club.phone, area_code: true) %></p>
		<p class="club-info"><%= fa_icon 'building-o' %> <%= @club.address %></p>
		
	</section>
	<section>
		<%= render 'gmap' %>

	</section>
	<section>
		<p class="section-title">Options</p>
	</section>
			<p class="club-options directions"><%= fa_icon 'taxi' %> Get Directions</p>
			<p class="club-options"><%= fa_icon 'spinner' %> View Live Streem </p>
			<p class="club-options"><%= fa_icon 'photo' %> View All Photos </p>
			<p class="club-options no-border"><%= fa_icon 'bookmark' %> Reserve Table </p>
	
	<section>
		<p class="section-title"><%= fa_icon 'photo' %> Photos</p>
		<%= image_tag @club.avatar.url(:thumb), class: "img-responsive" %>
	</section>
	<section>

	</section>
</div>
<div class="col-sm-6">
	<div id="follows_club">
		<%= render :partial => "follows_clubs/follow_club", :locals => {:club => @club} %>
	</div>


</div>
<div class="col-sm-3 panel">
	<section>
		<p class="section-title">Calendar</p>
		<% @club.events.each do |event| %>
		<p><%= event.date %></p>
		<%= link_to event.name, event %>
		<% end %>
	</section>
</div>
