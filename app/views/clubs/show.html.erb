<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="col-sm-3 panel">
	<section>
		<div class="club-name-header">
			<p class="club-name"><%= @club.name %></p>
					<p class="club-info"><%= fa_icon 'phone' %> <%= number_to_phone(@club.phone, area_code: true) %></p>
		<p class="club-address"><%= fa_icon 'home' %> <%= @club.address %></p>
			<%= render 'wait' %>
		</div>


		<%= render 'gmap' %>
	</section>
	<section>
		<p class="section-title">Options</p>
	</section>
	<%= render 'options' %>
</div>
<div class="col-sm-6">

	<div class="slideshow-panel">
			<section>
		<p class="slideshow-title">
<%= fa_icon 'photo' %> Photos - View All </span>
		</p>
		</section>
		
<%= render 'slideshow' %>

</div>
</div>
<div class="col-sm-3">
	<section>
		<% @upcoming_events.each do |event| %>
		<div class="col-sm-12">

			<div class="event-date">
				<%= event.start_time.strftime('%a %b %d') %>
			</div>
		</div>
		<div class="col-sm-12 event-info">
			<div class="col-md-4">
				<center><p><%= image_tag event.picture %></p></center>
			</div>
			<div class="col-md-8 mt5">
				<p class="event-name"><%= event.name %></p>
				<p class="event-time">Doors <%= event.start_time.strftime(' %l%P') %></p>
			</div>
		</div>
		<% end %>
	</div>
</section>
</div>
