<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div class="col-sm-3 panel">
	<section>
		<div class="club-name-header">
			<p class="club-name"><%= @club.name %></p>
			<%= render 'wait' %>
		</div>
		<div class="club-avatar"><center><%= image_tag @club.avatar.url(:small), class: "img-responsive" %></center></div>
		<p class="club-info"><%= fa_icon 'phone' %> <%= number_to_phone(@club.phone, area_code: true) %></p>
		<p class="club-address"><%= fa_icon 'home' %> <%= @club.address %></p>
		<%= render 'gmap' %>
	</section>
	<section>
		<p class="section-title">Options</p>
	</section>
	<%= render 'options' %>
</div>
<div class="col-sm-6">
	<div class="panel">
		<section>
			<p class="section-title">Photos</p>
			<%= fa_icon 'photo' %> <%= render 'photos' %>
			<table>
				<tbody>
					<tr>
						<% @club.images.first(4).each do |image| %>
						<td><%=link_to(image_tag(image.image.url(:thumb)), image_path(image), class: "img-responsive")  %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</section>
	</div>
</div>
<div class="col-sm-3 panel">
	<section>
		<p class="section-title">Calendar</p>
		<% @upcoming_events.each do |event| %>
		<p class="event-date">
			<%= event.start_time.strftime('%a %b %d') %>
		</p>
		<div class="event-info">
			<p><%= event.name %></p>
			<p>Doors <%= event.start_time.strftime(' %l%P') %></p>
		</div>
		<% end %>
	</section>
</div>
