<h1>Images</h1>
<table>
  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%=link_to( image_tag(image.image.url(:small)), image_path(image), class: "img-responsive") %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Image', new_image_path %>
