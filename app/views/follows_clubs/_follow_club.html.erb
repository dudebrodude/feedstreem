<% if current_user.following?(club) %>
<%= fa_icon "check" %>
<%= link_to("Added to Favorites", club_follow_path(club.to_param, current_user.get_follow(club).id), :"data-no-turbolink"=>true, :method => :delete, :remote => true) %>
<% else %>
<%= fa_icon "star" %>
<%= link_to("Add to Favorites", club_follows_path(club.to_param), :"data-no-turbolink"=>true, :method => :post,:remote => true) %>
<% end %>