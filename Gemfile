gem 'fb_graph'
gem 'owlcarousel-rails'
gem 'bootswatch-rails'
gem 'letsrate'
gem 'seems_rateable'
gem 'blueimp-gallery'
gem 'jquery-fileupload-rails'
gem 'twitter-typeahead-rails'





group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :production do
  gem 'pg', '0.15.1'
  gem 'rails_12factor', '0.0.2'
end

